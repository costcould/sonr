{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.5/.schema/devbox.schema.json",
  "packages": [
    "buf@latest",
    "docker@latest",
    "go_1_21@latest",
    "helix@latest",
    "ipfs@latest",
    "go-task@latest",
    "templ@latest",
    "dendrite@latest",
    "caddy@latest",
    "zellij@latest",
    "doppler@latest",
    "mods@latest",
    "gum@latest"
  ],
  "env": {
    "CADDY_CONFIG": "./deploy/etc/caddy/Caddyfile"
  },
  "shell": {
    "init_hook": ["sh ./scripts/dev_deps.sh"],
    "scripts": {
      "proto": ["make proto-gen"],
      "templ": ["templ generate"],
      "devnet": ["make sh-testnet"],
      "testnet": ["make testnet"]
    }
  }
}
