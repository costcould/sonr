{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.5/.schema/devbox.schema.json",
  "packages": [
    "buf@latest",
    "docker@latest",
    "go_1_21@latest",
    "ipfs@latest",
    "templ@latest",
    "dendrite@latest",
    "doppler@latest",
    "mods@latest",
    "gum@latest",
    "neovim@latest",
    "golangci-lint@latest"
  ],
  "shell": {
    "scripts": {
      "edit":    ["nvim ."],
      "gen":     ["make proto-gen", "templ generate"],
      "dev":     ["make sh-testnet"],
      "testnet": ["devbox services up --background", "make testnet"],
      "ps":      ["devbox services ls"],
      "kill":    ["devbox services down"]
    }
  }
}
