{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.5/.schema/devbox.schema.json",
  "packages": [
    "buf@latest",
    "docker@latest",
    "go_1_21@latest",
    "helix@latest",
    "ipfs@latest",
    "go-task@latest",
    "templ@latest",
    "dendrite@latest",
    "doppler@latest",
    "mods@latest",
    "gum@latest",
    "ipfs-cluster@latest"
  ],
  "shell": {
    // "init_hook": ["sh ./scripts/dev_deps.sh"],
    "scripts": {
      "gen": ["make proto-gen", "templ generate"],
      "dev": ["make sh-testnet"],
      "testnet": ["make testnet"],
      "svc:ls": ["devbox services ls"],
      "svc:up": ["devbox services up --background"],
      "svc:down": ["devbox services down"]
    }
  }
}
